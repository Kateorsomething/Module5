<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="pane" fx:id="pane" minHeight="720" minWidth="1280" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.windowController">
   <children>

      <AnchorPane id="frontpane" blendMode="SRC_ATOP" layoutX="198.0" layoutY="115.0" prefHeight="464.0" prefWidth="794.0" stylesheets="@style.css">
         <effect>
            <Blend mode="COLOR_BURN" />
         </effect>
         <children>
                  <PasswordField id="username" fx:id="username" layoutX="542.0" layoutY="166.0" maxHeight="30.0" maxWidth="200.0" minHeight="30.0" minWidth="200.0" prefHeight="30.0" prefWidth="200.0" promptText="username" stylesheets="@style.css" />

                  <PasswordField id="password" fx:id="password" layoutX="542.0" layoutY="217.0" maxWidth="200.0" minHeight="30.0" minWidth="200.0" prefHeight="30.0" prefWidth="200.0" promptText="password" stylesheets="@style.css" />
         </children>
      </AnchorPane>

      <Text id="errormessage" fx:id="errormessage" fill="#bf0000" layoutX="765.0" layoutY="420.0" opacity="0" strokeType="OUTSIDE" strokeWidth="0.0" text="Invalid username or password.">
         <font>
            <Font name="Berlin Sans FB" size="12.0" />
         </font>
      </Text>

      <Text id="text" fx:id="text" fill="#f3f3e6" layoutX="250.0" layoutY="360.0" opacity="100" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Sign in">
         <font>
            <Font name="Matura MT Script Capitals" size="135.0" />
         </font>
      </Text>



      <Button id="login" fx:id="loginbutton" layoutX="772.0" layoutY="382.0" mnemonicParsing="false" onAction="#login" stylesheets="@style.css" text="login">
         <font>
            <Font size="13.0" />
         </font>
      </Button>

      <Button id="exitbutton" layoutX="847.0" layoutY="382.0" mnemonicParsing="false" onAction="#exit" stylesheets="@style.css" text="exit">
         <font>
            <Font size="13.0" />
         </font>
      </Button>


      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="f3f3e6" height="2.0" layoutX="741.0" layoutY="308.0" stroke="#fff8e6" strokeType="INSIDE" width="200.0" />
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="f3f3e6" height="2.0" layoutX="741.0" layoutY="359.0" stroke="#fff8e6" strokeType="INSIDE" width="200.0" />

   </children>
</AnchorPane>
